{% extends 'base.html.twig' %}

{% block title %}*admin Dashbord {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
<div class="p-6 bg-gray-100 min-h-screen">

  <h1 class="text-3xl font-bold text-gray-800 mb-6">Welcome, {{ app.user.email }}</h1>

  <!-- Summary Cards -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
  <div class="bg-white shadow rounded-xl p-4 flex flex-col justify-between h-32">
    <p class="text-gray-600 text-sm">Today's Orders</p>
    <p class="text-lg font-semibold text-blue-600"> totalOrdersToday </p>
  </div>

  <div class="bg-white shadow rounded-xl p-4 flex flex-col justify-between h-32">
    <p class="text-gray-600 text-sm">Today's Revenue</p>
    <p class="text-lg font-semibold text-green-600"> revenueToday  TND</p>
  </div>

  <div class="bg-white shadow rounded-xl p-4 flex flex-col justify-between h-32">
    <p class="text-gray-600 text-sm">Products in Stock</p>
    <p class="text-lg font-semibold text-indigo-600"> {{totalProductsInStock}} </p>
  </div>

  <div class="bg-white shadow rounded-xl p-4 flex flex-col justify-between h-32">
    <p class="text-gray-600 text-sm">Low Stock Alerts</p>
    <p class="text-lg font-semibold text-red-600"> lowStockCount </p>
  </div>
</div>
<!-- Quick Actions -->
  <div class="mb-10">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Quick Actions</h2>
    <div class="flex flex-wrap gap-4">
      <a href="{{path('owner.product.home')}}" class="bg-blue-500 text-white px-4 py-2 rounded-lg shadow hover:bg-blue-600 transition">Manage Products</a>
      <a href="{{path('owner.category.home')}}" class="bg-gray-700 text-white px-4 py-2 rounded-lg shadow hover:bg-gray-800 transition">Manage Categoris</a>
      <a href="{{ path('owner.store.home') }}" class="bg-purple-500 text-white px-4 py-2 rounded-lg shadow hover:bg-purple-600 transition">Manage Stores</a>
      <a href="{{ path('owner.stock.home') }}" class="bg-yellow-500 text-white px-4 py-2 rounded-lg shadow hover:bg-yellow-600 transition">Stock Overview</a>
    </div>
  </div>
  <!-- Low Stock Table -->
  

</div>
{% endblock %}
