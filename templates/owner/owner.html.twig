{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}
{% block page_title %}Dashboard{% endblock %}

{% block body %}
<div class="dashboard-grid">
    <!-- Dashboard Cards -->
    <div class="dashboard-card">
        <div class="card-icon orders">
            <i class="bi bi-cart"></i>
        </div>
        <div class="card-title">Today's Orders</div>
        <div class="card-value" style="color: #2563eb;"> totalOrdersToday </div>
        <div class="text-success small">
            <i class="bi bi-arrow-up"></i> 12% from yesterday
        </div>
    </div>
    
    <div class="dashboard-card">
        <div class="card-icon revenue">
            <i class="bi bi-currency-dollar"></i>
        </div>
        <div class="card-title">Today's Revenue</div>
        <div class="card-value" style="color: #10b981;"> revenueToday  TND</div>
        <div class="text-success small">
            <i class="bi bi-arrow-up"></i> 8% from yesterday
        </div>
    </div>
    
    <div class="dashboard-card">
        <div class="card-icon products">
            <i class="bi bi-box-seam"></i>
        </div>
        <div class="card-title">Products in Stock</div>
        <div class="card-value" style="color: #8b5cf6;">{{ totalProductsInStock }}</div>
        <div class="text-secondary small">
            Across all stores
        </div>
    </div>
    
    <div class="dashboard-card">
        <div class="card-icon" style="background: rgba(239, 68, 68, 0.1); color: #ef4444;">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="card-title">Low Stock Items</div>
        <div class="card-value" style="color: #ef4444;"> lowStockItems </div>
        <div class="text-danger small">
            Needs attention
        </div>
    </div>
</div>

<!-- Quick Actions -->
<h3 class="section-title">Quick Actions</h3>
<div class="shortcuts-grid">
    <a href="{{ path('owner.product.create') }}" class="shortcut-card">
        <i class="bi bi-plus-square"></i>
        <div class="title">Add Product</div>
    </a>
    
    <a href="{{ path('owner.stock.home') }}" class="shortcut-card">
        <i class="bi bi-box"></i>
        <div class="title">Manage Stock</div>
    </a>
    
    <a href="{{ path('owner.store.create') }}" class="shortcut-card">
        <i class="bi bi-shop"></i>
        <div class="title">Create Store</div>
    </a>
    
    <a href="{{ path('owner.category.create') }}" class="shortcut-card">
        <i class="bi bi-tags"></i>
        <div class="title">Add Category</div>
    </a>
</div>


{% endblock %}