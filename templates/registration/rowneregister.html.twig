{% extends 'base_auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<form class="bg-white p-4 rounded shadow" style="min-width:320px; max-width:400px; width:100%;">
    <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>
    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}
        <button type="submit" class="btn btn-lg btn-primary w-100 mt-3">Register</button>
    {{ form_end(registrationForm) }}
    <a href="{{path('app_login')}}">log in </a>
</form>
{% endblock %}
