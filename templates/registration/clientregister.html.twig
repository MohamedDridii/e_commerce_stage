{% extends 'base_auth.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>

{{ form_start(registrationForm, {
    attr: {
        class: 'bg-white p-4 rounded shadow',
        style: 'min-width:320px; max-width:400px; width:100%;'
    }
}) }}
    {{ form_errors(registrationForm) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.password, { label: 'Password' }) }}
    {{ form_row(registrationForm.name) }}
    {{ form_row(registrationForm.adress) }}
    {{ form_row(registrationForm.phoneNumber) }}
    {{ form_row(registrationForm.agreeTerms) }}

    <button type="submit" class="btn btn-lg btn-primary w-100 mt-3">Register</button>
{{ form_end(registrationForm) }}

<a href="{{ path('app_login') }}">Log in</a>
{% endblock %}
