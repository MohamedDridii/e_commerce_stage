{% extends 'base.html.twig' %}

{% block title %}Edit Product{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="row">
    <div class="col-6 mx-auto">
        <h1 class="display-4 my-5 text-center">Edit Product</h1>

        {{ form_start(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.price) }}
            {{ form_row(form.image) }}
            {{ form_row(form.description) }}
            {{ form_row(form.category) }}

            <div class="mb-3">
                <label class="form-label">Stock per Store</label>
                {% for stockForm in form.stock_data %}
                    <div class="form-check mb-2">
                        {{ form_row(stockForm.selected, {'label': stockForm.store.vars.data.name}) }}
                        {{ form_row(stockForm.quantity) }}
                        {{ form_widget(stockForm.store) }} {# Hidden field for store #}
                    </div>
                {% endfor %}
            </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Save changes</button>

        {{ form_end(form) }} <br>

        <a href="{{ path('owner.product.home') }}" class="btn btn-secondary w-100">‚Üê Go back to Product home page</a>
    </div>
</div>


{% endblock %}
