{% extends 'base.html.twig' %}
{% block title %}Create Product{% endblock %}
{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h1 class="h4 mb-0 text-center">Create New Product</h1>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form) }}
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.name, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.price, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                <div class="input-group">
                                    <span class="input-group-text">TND</span>
                                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.category, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                {{ form_label(form.image, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="mb-3">
                                {{ form_label(form.description, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                            </div>
                        </div>
                    </div>
                    
                    <div class="border rounded p-4 mt-4 bg-light">
                        <h5 class="mb-4 fw-bold d-flex align-items-center">
                            <i class="bi bi-shop me-2"></i>Store Stock Allocation
                        </h5>
                        
                        <div class="row g-3">
                            {% for stockForm in form.stock_data %}
                            <div class="col-md-6">
                                <div class="card border">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center mb-3">
                                            {{ form_widget(stockForm.selected, {'attr': {'class': 'form-check-input me-2 mt-0'}}) }}
                                            <label class="form-check-label fw-bold">
                                                {{ stockForm.store.vars.data.name }}
                                            </label>
                                            {{ form_widget(stockForm.store) }} {# Hidden field #}
                                        </div>
                                        <div class="mb-0">
                                            {{ form_label(stockForm.quantity, null, {'label_attr': {'class': 'form-label'}}) }}
                                            {{ form_widget(stockForm.quantity, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-5">
                        <button type="submit" class="btn btn-primary btn-lg flex-grow-1 py-2">
                            <i class="bi bi-plus-circle me-2"></i>Create Product
                        </button>
                        <a href="{{ path('owner.product.home') }}" class="btn btn-outline-secondary btn-lg py-2">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}