{% extends 'base.html.twig' %}

{% block title %}Create{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }
    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
    .store-quantity-group {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 10px;
    }
</style>

<div class="row">
    <div class="col-8 mx-auto">
        <h1 class="display-4 my-5 text-center">New Product</h1>

        {{ form_start(form) }}
            {{ form_row(form.name) }}
            {{ form_row(form.price) }}
            {{ form_row(form.image) }}
            {{ form_row(form.description) }}
            {{ form_row(form.category) }}

            <h5 class="mt-4 mb-2">Select Stores and  Initial Stock Quantity</h5>

            <div class="border rounded p-3 bg-light">
                {% for stockForm in form.stock_data %}
                    <div class="form-check mb-2">
                        {{ form_row(stockForm.selected, {'label': stockForm.store.vars.data.name}) }}
                        {{ form_row(stockForm.quantity) }}
                        {{ form_widget(stockForm.store) }} {# this will be hidden #}
                    </div>
                {% endfor %}
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-4">Add Product</button>
        {{ form_end(form) }}

        <br>
        <a href="{{ path('owner.product.home') }}" class="btn btn-secondary w-100">‚Üê Go back to Product home page</a>
    </div>
</div>


{% endblock %}
